#!/bin/bash

# NB for dotfiles, to add a file, you need to modify an
# existing file first, then push bc you check for changes first
gd="git --git-dir=$HOME/dotfiles/ --work-tree=$HOME"
if [ "$gd  status --porcelain" ]; then
	echo "dotfiles"
	$gd add ~/README.md ~/.bashrc ~/.config/nvim ~/.vim/sessions ~/.Xresources ~/.config/sxiv/exec ~/.config/alacritty/alacritty.yml ~/.config/i3/config ~/.config/i3status/i3status.conf ~/.config/picom/picom.conf ~/.config/i3blocks ~/.gtkrc-2.0 ~/.config/gtk-3.0/settings.ini ~/.config/i3-scrot.conf ~/.local/bin ~/.config/qutebrowser/autoconfig.yml ~/.config/qutebrowser/config.py ~/.config/youtube-dl.conf ~/.config/qutebrowser/userscripts ~/.config/mpv/input.conf ~/.local/share/qutebrowser/sessions ~/.config/ranger ~/.config/fontconfig/conf.d ~/.keynavrc ~/.config/amfora/config.toml ~/.config/qalculate/qalc.cfg ~/.config/polybar ~/.w3m/keymap ~/.config/youtube-viewer/youtube-viewer.conf
	$gd commit -m "update" -a
	$gd push -u origin main -q
	echo -e "\n"
fi

# NB cronjobs only backed up with change of p-dot-script repo, but who cares
cd ~/p-dot-script
if [ "$(git status --porcelain)" ]; then
	echo "p-dot-script"
 	cp /var/spool/cron/mark ~/p-dot-script/linked/mark
	git add .
	git commit -m "update"
	git push -u origin main -q
	echo -e "\n"
fi

cd ~/Documents
if [ "$(git status --porcelain)" ]; then
	echo "Documents"
	git add .
	git commit -m "update"
	git push -u origin main -q
	echo -e "\n"
fi

cd ~/seasonality
if [ "$(git status --porcelain)" ]; then
	echo "seasonality"
	git add .
	git commit -m "update"
	git push -u origin main -q
	echo -e "\n"
fi

cd ~/vimwiki
if [ "$(git status --porcelain)" ]; then
	echo "vimwiki"
	git add .
	git commit -m "update"
	git push -u origin main -q
	echo -e "\n"
fi

cd ~/copper-ingot
if [ "$(git status --porcelain)" ]; then
	echo "copper-ingot"
	git add .
	git commit -m "update"
	git push -u origin main -q
	echo -e "\n"
fi
